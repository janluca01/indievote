<p id="notice"><%= notice %></p>

	<div align="center">
		<div class="box panel panel-default" style="text-align:center">
			<div class="panel-heading" style="text-align:center">
				<h3> <%= @song.title %> </h3>
			</div>
			<div class="panel-body" style="">
				<%= link_to image_tag(@song.image.url(:medium)), @song %>
				<h4><%= @song.description %></h4>
				<p><h5><%= link_to "Adden", "https://www.songchat.com/add/#{@song.link}" %></h5></p>
			</div>
		</div>
	</div>

	<div id="comments">
		<%= render :partial => @song.comments %>
	</div>
	<%= simple_form_for [@pin, Comment.new] do |f| %>
		<p>
			<%= f.input :text, :label => "New Comment"%>
		</p>
		<p>
			<%= f.submit "Add Comment", class: "btn btn-primary" %>
		</p>
	<% end %>



